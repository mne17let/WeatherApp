<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Город"
        android:layout_margin="10dp"
        android:textSize="20sp"

        android:id="@+id/id_textview_cityname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Температура"
        android:layout_margin="10dp"
        android:textSize="20sp"

        android:id="@+id/id_textview_temperature"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@tools:sample/avatars"

        android:id="@+id/id_imageview_weather_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Широта"
        android:layout_margin="10dp"
        android:textSize="20sp"

        android:id="@+id/id_textview_shirota"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Долгота"
        android:layout_margin="10dp"
        android:textSize="20sp"

        android:id="@+id/id_textview_dolgota"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_hamburgermenu"
        android:background="@android:color/transparent"
        android:id="@+id/id_burger"/>

</LinearLayout>